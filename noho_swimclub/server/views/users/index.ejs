<section>
    <article>
        <a href="<%=`/users/waitlist`%>"><button class="button-9" role="button">Manage Waitlist</button></a>
    </article>
    <article>
      <h2>Current Members</h2>
      <% let famMem= 0;
            let individualMem = 0; 
            let totalMem = 0;%>
        <p>Family Memberships: <%= famMem %><br> </p>
        <p>Individual Memberships: <%= famMem %><br> </p>
        <p>Total Members: <%= totalMem %><br> </p>
    </article>
    <article>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Alternative Last Name</th>
            <th>Persons on Membership</th>
        
          </tr>
        </thead>
        <tbody>

          <% users.forEach(user => { 
            if(user.isMember){
                if(user.membershipType ==='individual'){
                    if(user.spouseFull !== ""){
                        individualMem += 2;
                        totalMem +=2;
                    }else{
                        individualMem +=1;
                        totalMem +=1;
                    }
                }else if(user.membershipType === 'family'){
                    famMem += user.familySize;
                    totalMem += user.familySize;
                }%>
                <tr>
                    <td>
                      <a href="<%= `/users/${user._id}` %>"> <%= user.name.last%> </a>
                    </td>
                    <td> <%= user.spouse.slast%> </td>
                    <td> <%= user.familySize%> </td>
                    <td>
                    <a href="<%= `/users/${user._id}/delete?_method=DELETE` %>"
                        onclick="return confirm('Are you sure you would like to revoke this membership?')"
                        ><button>Revoke Membership</button></a>
                    
                    </td>
                    
                  </tr>



           <% }%>
          
          <% }); %>
        </tbody>
      </table>
      
  
    </article>
  </section>
  
  